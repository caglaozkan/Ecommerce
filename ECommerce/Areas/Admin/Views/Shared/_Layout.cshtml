
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Welcome To | Bootstrap Based Admin Template - Material Design</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Content/Admin/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Content/Admin/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Content/Admin/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Morris Chart Css-->
    <link href="~/Content/Admin/plugins/morrisjs/morris.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Content/Admin/css/themes/all-themes.css" rel="stylesheet" />
    <link href="~/Content/Admin/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
</head>

<body class="theme-red">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>

    <!-- #END# Page Loader -->
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand" href="index.html">ECommerce-Panel</a>
            </div>
            
        </div>
    </nav>
    <!-- #Top Bar -->
    @if (string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name) == false)
    {
        <h3></h3>
        <a href="@Url.Action("LogOff","Login",new { area = "Admin" , returnUrl="/Home/Index"})">Log Off</a>
    }
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="/Content/Admin/images/user.png" width="48" height="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@HttpContext.Current.User.Identity.Name</div>
                    <div class="btn-group user-helper-dropdown">
                        <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="@Url.Action("LogOff","Login",new { area = "Admin" , returnUrl="/Home/Index"})"><i class="material-icons">input</i>Sign Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    @*<li class="header"></li>*@
                    <li class="active">
                        <a href="@Url.Action("Index", new {Controller = "Home" })">
                            <i class="material-icons">home</i>
                            <span>Anasayfa</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">widgets</i>
                            <span>Ürünler</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("Index", new {Controller = "Product" })" >
                                    <span>Ürün Listesi</span>
                                </a>
                                <a href="@Url.Action("ProductAdd", new {Controller = "Product" })">
                                    <span>Ürün Ekle</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">swap_calls</i>
                            <span>Markalar</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("List", new {Controller = "Brand" })">
                                    <span>Marka Listesi</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", new {Controller = "Brand" })">
                                    <span>Marka Ekle</span>
                                </a> 
                              </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">assignment</i>
                            <span>Siparişler</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.RouteUrl("order")">
                                    <span>Sipariş Listesi</span>
                                </a> 
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">view_list</i>
                            <span>Üyeler</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("Index", new {Controller = "User" })">
                                    <span>Üye Bilgileri</span>
                                </a> 
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">swap_calls</i>
                            <span>Kategoriler</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("List", new {Controller = "Category" })">
                                    <span>Kategori Listesi</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", new {Controller = "Category" })">
                                    <span>Kategori Ekle</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("List", new {Controller = "SubCategory" })">
                                    <span>Alt Kategori Listesi</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", new {Controller = "SubCategory" })">
                                    <span>Alt Kategori Ekle</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2017 <a href="javascript:void(0);">Çağla Özkan</a>.
                </div>
                <div class="version">

                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content">
        @RenderBody()
    </section>

    <!-- Jquery Core Js -->
    <script src="~/Content/Admin/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/Content/Admin/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Select Plugin Js -->
    <script src="~/Content/Admin/plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="~/Content/Admin/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Content/Admin/plugins/node-waves/waves.js"></script>

    <!-- Jquery CountTo Plugin Js -->
    <script src="~/Content/Admin/plugins/jquery-countto/jquery.countTo.js"></script>

    <!-- Morris Plugin Js -->
    <script src="~/Content/Admin/plugins/raphael/raphael.min.js"></script>
    <script src="~/Content/Admin/plugins/morrisjs/morris.js"></script>

    <!-- ChartJs -->
    <script src="~/Content/Admin/plugins/chartjs/Chart.bundle.js"></script>

    <!-- Flot Charts Plugin Js -->
    <script src="~/Content/Admin/plugins/flot-charts/jquery.flot.js"></script>
    <script src="~/Content/Admin/plugins/flot-charts/jquery.flot.resize.js"></script>
    <script src="~/Content/Admin/plugins/flot-charts/jquery.flot.pie.js"></script>
    <script src="~/Content/Admin/plugins/flot-charts/jquery.flot.categories.js"></script>
    <script src="~/Content/Admin/plugins/flot-charts/jquery.flot.time.js"></script>

    <!-- Sparkline Chart Plugin Js -->
    <script src="~/Content/Admin/plugins/jquery-sparkline/jquery.sparkline.js"></script>

    <!-- Custom Js -->
    <script src="~/Content/Admin/js/admin.js"></script>
    <script src="~/Content/Admin/js/pages/index.js"></script>

    <!-- Demo Js -->
    <script src="~/Content/Admin/js/demo.js"></script>

    @RenderSection("scripts",false)
</body>

</html>