@model IEnumerable<ECommerce.Areas.Admin.Models.OrderViewModel>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Sipariş Listesi
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı Adı Soyad</th>
                            <th>Fatura Adresi</th>
                            <th>Teslimat Adresi</th>
                            <th>Ödeme Yöntemi</th>
                            <th>Nakliye Yöntemi</th>
                            <th>Toplam Fiyat</th>
                            <th>Oluşturulma Zamanı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BasketId</td>
                                <td>@item.UserName</td>
                                <td>@item.BillingAddressName</td>
                                <td>@item.ShippingAddressName</td>
                                <td>@item.PaymentMethodName</td>
                                <td>@item.ShippingMethodName</td>
                                <td>@item.TotalPrice</td>
                                <td>@item.CreatedTime</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




