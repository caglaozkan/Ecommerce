@model ECommerce.Models.AddressViewModel
<div class="container">
    @if (TempData.ContainsKey("Message"))
    {
        <div class="row">
            <div class="span9">
                <div class="alert alert-info alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @TempData["Message"].ToString()
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="span3">
            @Html.Partial("~/Views/Shared/_Login.cshtml")
        </div>

        @using (Html.BeginRouteForm("UserAddressAddPost", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(x => x.AddressId)
            <div class="span9">
                <fieldset>
                    <!-- Address form -->
                    <h2>Adres Ekle</h2>

                    <!-- full-name input-->
                    <div class="control-group">
                        <label class="control-label">Adres Adı</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.name, new { @class = "input-xlarge" })
                        </div>
                    </div>
                    <!-- address-line1 input-->
                    <div class="control-group">
                        <label class="control-label">Adres 1</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.address1, new { @class = "input-xlarge" })
                        </div>
                    </div>
                    <!-- address-line2 input-->
                    <div class="control-group">
                        <label class="control-label">Adres 2</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.address2, new { @class = "input-xlarge" })
                        </div>
                    </div>
                    <!-- city input-->
                    <div class="control-group">
                        <label class="control-label">Şehir</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.city, new { @class = "input-xlarge" })
                        </div>
                    </div>
                    <!-- postal-code input-->
                    <div class="control-group">
                        <label class="control-label">Posta Kodu</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.postcode, new { @class = "input-xlarge" })
                        </div>
                    </div>
                    <!-- country select -->
                    <div class="control-group">
                        <label class="control-label">Ülke</label>
                        <div class="controls">
                           @Html.DropDownListFor(x => x.countryid, Model.Countrylist, new { @class = "input-xlarge" })
                        </div>
                    </div>
                    <button class="btn btn-primary waves-effect" type="submit">Kaydet</button>
                </fieldset>
            </div>
        }
    </div>
</div>

