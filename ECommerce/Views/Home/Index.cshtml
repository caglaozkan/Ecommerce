@model ECommerce.Models.ProductListViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="span3">
            @Html.Partial("~/Views/Shared/_Basket.cshtml", Model.Basket)
            @Html.Partial("~/Views/Shared/_Category.cshtml",Model.categories)
            @Html.Partial("~/Views/Shared/_Login.cshtml")
        </div>
        <div class="span9">

            <ul class="thumbnails">
                @foreach (var item in Model.product)
                {
                    <li class="span3">
                        <div class="thumbnail">
                            <img src="@item.picturebig" alt="">
                            <div class="caption">
                                <h4>@item.name</h4>
                                <p>@item.price</p>
                                <a class="btn btn-primary" href="@Url.Action("Detail","Product",new {productId=item.id })">Ürün Detayı</a>                               
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>