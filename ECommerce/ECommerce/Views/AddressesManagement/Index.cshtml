@model List<ECommerce.Dal.Entities.Address>

<div class="container">
    @if (TempData.ContainsKey("Message"))
    {
        <div class="row">
            <div class="span9">
                <div class="alert alert-info alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @TempData["Message"].ToString()
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="span3">
            @Html.Partial("~/Views/Shared/_Login.cshtml")
        </div>
        <div class="span9">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Adres Adı</th>
                        <th>Adres 1</th>
                        <th>Adres 2</th>
                        <th>Posta Kodu</th>
                        <th>Şehir</th>
                        <th>Ülke</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td>@item.address1</td>
                            <td>@item.address2</td>
                            <td>@item.postcode</td>
                            <td>@item.city</td>
                            <td>@item.country.name</td>
                            <td><a href="@Url.RouteUrl("UserAddressEdit", new { addressId = item.id })" class="btn btn-info waves-effect"> Düzenle</a></td>
                            <td><a href="@Url.RouteUrl("UserAddressDelete",new { addressId = item.id})" class="btn btn-danger waves-effect ">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>